<div class="row">
  <h4 class="col-md-10 mx-auto font-weight-bold">会員情報編集</h4>
</div>
<br>

<div class="row">
  <div class="col-md-10 mx-auto">
    <%= form_with model:@customer, local:true do |f| %>
    <table class='table table-borderless table-sm'>
      
        <tbody>
          <tr>
            <th>
              <p>氏名</p>
            </th>
            <td>
              <div class="field">
                <%= f.text_field :last_name, placeholder:@customer.last_name %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name, placeholder:@customer.first_name %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              <p>フリガナ</p>
            </th>
            <td>
              <div class="field">
                <%= f.text_field :last_name_kana, placeholder:@customer.last_name_kana %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name_kana, placeholder:@customer.first_name_kana %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              <p>郵便番号</p>
            </th>
            <td>
              <div class="field">
                <%= f.text_field :zip_code,  placeholder:@customer.zip_code %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              <p>住所</p>
            </th>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :address, placeholder:@customer.address, style: "width: 100%;" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              <p>電話番号</p>
            </th>
            <td>
              <div class="field">
                <%= f.telephone_field :phone_number, placeholder:@customer.phone_number %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              <p>メールアドレス</p>
            </th>
            <td>
              <div class="field">
                <%= f.email_field :email, placeholder:@customer.email %>
              </div>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <div class="field">
                <%= f.submit "編集内容を保存", class: "btn btn-success" %>
              </div>
            </td>
            <td>
              <div class="field">
               <%= link_to "退会する", confirm_unsubscribe_path(current_customer.id), class: "btn btn-danger" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>