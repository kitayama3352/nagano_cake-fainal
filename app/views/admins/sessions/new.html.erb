<div class="flash danger">
      <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%> 
</div> 
<div class="row">
  <h4 class="title font-weight-bold">管理者ログイン</h4>
</div> 

<div class="row">
  <div class="mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class='table table-borderless'>
        <tr>
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", size: "40" %></td>
        </tr>
        <tr>
          <th><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, size: "40" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "ログイン", class: 'btn btn-primary' %></td>
        </tr>
      </table
    <% end %>
  </div>
</div>