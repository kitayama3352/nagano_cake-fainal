
<% if flash[:success] %>
	<div class="flash success">
  	<span id="success"><%= flash[:success] %></span>
	</div>
<% elsif flash[:danger] %>
	<div class="flash danger">
	  <span id="alert"><%= flash[:danger] %></span>
	</div>
<% elsif flash[:info] %>
	<div class="flash info">
	  <span id="info"><%= flash[:info] %></span>
	</div>
<% end %>